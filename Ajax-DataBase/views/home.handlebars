<link rel="stylesheet" type="text/css" href="/css/stylesheet.css">

<div>

    <h1> WELCOME TO YOUR WORKOUT TRACKER!!</h1>

    <form id="workoutInput" action="/insert">

        <!-- Script For AJAX call -->
        <script src="/js/script1.js"></script>

    </form>
    <br>
    <table id="mainTable">
        <caption> <h2>THIS IS YOUR WORKOUT RECORD</h2> </caption>
        <tr>
        <th style="display:none">ID</th>
            <th> Exercise </th>
            <th> Repetitions </th>
            <th> Weight Lifted </th>
            <th> Units(lbs=1/kgs=0) </th>
            <th> Date </th>
            <th> Edit </th>
            <th> Delete </th>
        </tr>
        {{#each workouts}}
        <tr>
            <td style="display:none">{{this.id}}</td>
            <td>{{this.name}}</td>
            <td>{{this.reps}}</td>
            <td>{{this.weight}}</td>
            <td>{{this.lbs}}</td>
            <td>{{this.date}}</td>
            <td><a href="/updateWorkout?id={{this.id}}"><input type="button" value="Edit")"></a></td>
            <td><input type="button" value="Delete" onclick="deleteRow('mainTable',this,{{this.id}})"></td>
        </tr>
        {{/each}}
    </table>

    <!-- Reset the whole table: -->
    <br><a href="/reset-table"><input id="resetT" type="button" value="Reset Table")"></a>
</div>



